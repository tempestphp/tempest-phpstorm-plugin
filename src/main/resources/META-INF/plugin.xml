<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.tempest.framework</id>
    <name>Tempest PHP</name>
    <vendor email="xepozz@list.ru" url="https://github.com/xepozz">Dmitrii Derepko (@xepozz)</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <resource-bundle>messages.TempestBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <multiHostInjector
                implementation="com.github.tempest.framework.views.injection.PHPLanguageInjector"/>
        <webSymbols.webTypes
                source="META-INF/webTypes.json"
                enableByDefault="true"/>
        <xml.tagNameProvider
                implementation="com.github.tempest.framework.ComponentTagNameProvider"/>
        <psi.referenceContributor
                language="HTML"
                implementation="com.github.tempest.framework.views.references.ComponentReferenceContributor"/>
        <spellchecker.bundledDictionaryProvider
                implementation="com.github.tempest.framework.SpellcheckingDictionaryProvider"/>
    </extensions>
    <extensions defaultExtensionNs="com.jetbrains.php">

    </extensions>
</idea-plugin>
