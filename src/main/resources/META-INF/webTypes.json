      "attributes": [
        {
          "name": ":if",
          "description": "Conditional attribute <code>if</code>. The element is present in the final html when the condition is <strong>true</strong>.",
          "doc-url": "https://tempestphp.com/1.x/internals/view-spec#control-structures",
          "inject-language": "InjectablePHP",
          "value": {
            "type": "string",
            "required": true
          }
        },
        {
          "name": ":elseif",
          "description": "Conditional attribute <code>else if</code>. The element is present in the final html when the condition is <strong>true</strong>.",
